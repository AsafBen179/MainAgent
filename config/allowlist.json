{
  "description": "Auto-approve patterns for Claude Code permissions",
  "globalAllowlist": {
    "read": [
      {
        "pattern": "Read\\s+",
        "description": "File read operations",
        "autoApprove": true
      },
      {
        "pattern": "Glob\\s+",
        "description": "File search operations",
        "autoApprove": true
      },
      {
        "pattern": "Grep\\s+",
        "description": "Content search operations",
        "autoApprove": true
      },
      {
        "pattern": "List\\s+",
        "description": "List operations",
        "autoApprove": true
      }
    ],
    "write": [
      {
        "pattern": "Edit\\s+.*\\.(js|ts|json|md|txt|css|html|py|java|go|rs)$",
        "description": "Edit code files",
        "autoApprove": true
      },
      {
        "pattern": "Write\\s+.*\\.(js|ts|json|md|txt|css|html|py|java|go|rs)$",
        "description": "Write code files",
        "autoApprove": true
      },
      {
        "pattern": "Create\\s+(file|folder|directory)",
        "description": "Create files/folders",
        "autoApprove": true
      }
    ],
    "shell": [
      {
        "pattern": "^npm\\s+(install|i|ci|run|test|build)\\b",
        "description": "NPM safe commands",
        "autoApprove": true
      },
      {
        "pattern": "^git\\s+(status|log|diff|branch|checkout|add|commit)\\b",
        "description": "Git safe commands",
        "autoApprove": true
      },
      {
        "pattern": "^node\\s+",
        "description": "Node execution",
        "autoApprove": false
      },
      {
        "pattern": "^python\\s+",
        "description": "Python execution",
        "autoApprove": false
      }
    ]
  },
  "globalBlocklist": [
    {
      "pattern": "rm\\s+-rf",
      "description": "Recursive force delete"
    },
    {
      "pattern": "rmdir\\s+/s",
      "description": "Windows recursive delete"
    },
    {
      "pattern": "del\\s+/[fqs]",
      "description": "Windows force delete"
    },
    {
      "pattern": "format\\s+[a-z]:",
      "description": "Format drive"
    },
    {
      "pattern": ":(){:|:&};:",
      "description": "Fork bomb"
    },
    {
      "pattern": ">(\\s*/dev/sda|\\\\\\\\\\.\\\\.PhysicalDrive)",
      "description": "Direct disk write"
    },
    {
      "pattern": "curl.*\\|.*sh",
      "description": "Pipe to shell"
    },
    {
      "pattern": "wget.*\\|.*sh",
      "description": "Pipe to shell"
    }
  ],
  "approvalResponses": {
    "approve": ["Y", "y", "yes", "YES", "Yes", "אשר", "כן", "אישור", "APPROVE", "approve", "ok", "OK"],
    "reject": ["N", "n", "no", "NO", "No", "דחה", "לא", "ביטול", "REJECT", "reject", "cancel", "CANCEL"]
  }
}
